<%- include('header.ejs') -%>
<div class="login-form">
    <h1>Login Here</h1><hr>
        <form method="post" action="/do-login">
            <div class='form-group'>
            <label>Email</label>
            <input type="email" name="email_addr" id="email_addr" class="form-control" placeholder="Ex: john@gmail.com">
            <label>Password</label>
            <br>
            <input type="password" name="user_pass" id="user_pass" class="form-control" placeholder="Type your password here !">
            <br>
            <button type="submit" class="btn btn-success float-end">Login</button>
            </div>
        </form>
</div>
<%- include('footer.ejs') -%>